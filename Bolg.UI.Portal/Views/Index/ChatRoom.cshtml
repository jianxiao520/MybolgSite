@using Model
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>风风火火聊天室</title>
    <link href="~/Content/css/ChatRoom.css" rel="stylesheet" />
</head>
<body>
    <!-- 导航栏 -->
    <header class="top">
        <nav class="Navigation">
            <ul class="menu">
                <li><a href="~/index">首页</a></li>
                @{
                    if (ViewData["IsLogin"].ToString() == "1")
                    {
                        string Cookie = Request.Cookies["UserToken"].Value;
                        bk_user UserData = Bolg.Common.Cache.CacheHelper.GetCache<bk_user>(Cookie) as bk_user;
                        // var user = (bk_user)Session["User"];
                        string Us_ProfilePhoto = UserData.Us_ProfilePhoto + ".jpg";
                        <li style="width: auto; padding-left: 30px;"><a href="~/UserInfo/MyHome" style="text-align:right;"><p style="background: url('../UserHeadPortrait/@Us_ProfilePhoto') no-repeat;background-size: 100% 100%;width: 33px;height: 33px;top:2px;left: -25px;border-radius: 50%;display: inline-block;margin-right: 10px;position: absolute;"></p>@UserData.Us_NickName</a></li>
                    }
                    else
                    {
                        <li><a href="~/Index/Register">登录&注册</a></li>
                    }
                }
            </ul>
        </nav>
    </header>
    <!-- 整体框 -->
    <div class="RoomDiv" id="app">
        <!-- 左上角菜单图标 -->
        <div class="Memu_ico">
            <img :src="ImagePath" style="width: 100%;height: 100%;border-radius: 10px;">
        </div>
        <!-- 右侧导航 -->
        <div class="L_Memu">
            <!-- 垂直导航栏 -->
            <div style="height: 100%;">
                <ul style="text-align: center;" class="Pop-Box-Memu">
                    <li>
                        <span class="icon-users"></span>
                    </li>
                    <li>
                        <span class="icon-user"></span>
                    </li>
                </ul>
            </div>
            <!-- 在线用户弹出框 -->
            <div class="Pop-Box OnLineUsers">
                <div class="UsersList">
                    <ul>
                        <li v-for="(item,index) in items" :key="index">
                            <img :src="item.ImagePath">
                            <div class="textInfo">
                                <h1>{{item.NickName}}</h1>
                                <span>经验：{{item.Experience}}</span>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="Pop-Box UserInfo">
                <div class="MyselfInfo" id="MyUserInfo">
                    <img :src="ImagePath">
                    <hr>
                    <div class="DetailInfo" style="margin-top: 40px;">
                        <span>用户名</span>
                        <span>XusJaural</span>
                    </div>
                    <div class="DetailInfo">
                        <span>昵称</span>
                        <span>{{NickName}}</span>
                    </div>
                    <div class="DetailInfo">
                        <span>经验值</span>
                        <span>{{Experience}}</span>
                    </div>
                </div>
            </div>
        </div>
        <!-- 聊天框头部 -->
        <div class="Head">
            <a style="color: #bebebe;">恍恍惚惚红红火火 · 唠嗑店</a>
            <h1 class="MyslefUserName" contenteditable="true" spellcheck="false">{{NickName}}</h1>
        </div>
        <!-- 收到的消息显示框 -->
        <div class="Message-Box">
            <!-- 其他用户消息 -->
        </div>
        <!-- 下框 -->
        <div class="Send-Msg">
            <!-- 发送菜单 -->
            <div class="Send-Memu">

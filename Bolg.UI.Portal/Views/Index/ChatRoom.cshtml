            <div class="Send-Text-Box">
                <textarea type="text" name="Send-T" spellcheck="false" class="Multiline">你好鸭~</textarea>
            </div>
            <!-- 发送按钮 -->
            <div class="Send-Botton-Box">
                <div class="Button_Send">
                    提交[Enter]
                </div>
            </div>
            <!-- 未登录显示 -->
        </div>
        <div class="Send-Msg-Tourists">
            <span class="NotLogin">您未进行登录，不允许发言!</span>
        </div>
    </div>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery.cookie.js"></script>

    <script src="~/Scripts/layer/layer.js"></script>
    <script src="~/vueDemo/vue.js"></script>
    <script src="~/Scripts/ChatRoom.js"></script>
</body>
</html>
